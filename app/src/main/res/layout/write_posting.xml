<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/radio_layout"
        android:orientation="horizontal">
            <RadioGroup
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="일반 구인"
                        android:textSize="19dp"
                        android:id="@+id/radio_usually"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        ></RadioButton>
                    <RadioButton
                        android:padding="5dp"
                        android:layout_margin="3dp"
                        android:textSize="19dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="긴급 구인"
                        android:id="@+id/radio_urgency"
                        ></RadioButton>
            </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_layout"
        android:orientation="horizontal"
        android:id="@+id/layout_1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="게시글 제목 :"
                android:padding="7dp"
                android:textStyle="bold"
                android:textSize="19dp"
                ></TextView>
            <TextView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="7dp"
                android:text="현장 이름 :"
                android:textSize="19dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="7dp"
                android:textStyle="bold"
                android:text="현장 주소 :"
                android:textSize="19dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_gravity="right"
                android:textStyle="bold"
                android:text="직종 :"
                android:textSize="19dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="7dp"
                android:textStyle="bold"
                android:text="단가 :"
                android:textSize="19dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="모집인원 :"
                android:layout_gravity="right"
                android:padding="7dp"
                android:textSize="19dp"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/content_text_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            >
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="게시글 제목"
                android:id="@+id/title"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></EditText>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="현장이름"
                android:id="@+id/field_name"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></EditText>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="현장주소"
                android:id="@+id/field_address"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></EditText>
            <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:text="직종선택"
                android:id="@+id/job"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></androidx.appcompat.widget.AppCompatSpinner>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="단가"
                android:id="@+id/pay"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></EditText>
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="모집인원"
                android:id="@+id/people_num"
                android:layout_gravity="left"
                android:padding="7dp"
                android:textSize="19dp"
                ></EditText>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/layout_1"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="52dp"
    android:id="@+id/layout_2"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="7dp"
        android:text="근무날짜 :"
        android:textSize="19dp"
        android:textStyle="bold"></TextView>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="근무날짜"
            android:id="@+id/date"
            android:textSize="19dp"
            ></androidx.appcompat.widget.AppCompatSpinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="52dp"
        android:id="@+id/layout_3"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="7dp"
            android:text="근무시간 :"
            android:textSize="19dp"
            android:textStyle="bold"></TextView>
        <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:textStyle="bold"
        android:text="출근시간"
        android:id="@+id/start_time"
        android:textSize="19dp"
        ></androidx.appcompat.widget.AppCompatSpinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text=" ~ "
            android:layout_gravity="center_vertical"
            android:textSize="19dp"
            android:textStyle="bold"></TextView>
        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="퇴근시간"
            android:layout_marginLeft="3dp"
            android:id="@+id/finish_time"
            android:textSize="19dp"
            ></androidx.appcompat.widget.AppCompatSpinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="52dp"
        android:id="@+id/layout_4"
        android:orientation="horizontal"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="7dp"
        android:text="상세정보 :"
        android:textSize="19dp"
        android:textStyle="bold"></TextView>
        <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"></EditText>
   </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:text="게시"
        android:textColor="@color/LightColor"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>